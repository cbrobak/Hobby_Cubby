<ul class='navigation'>
  <% if user_signed_in? %>
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <%# <a class="navbar-brand" href="#">Hobby Cubby</a> %>
        <%= link_to "Hobby Cubby", root_path, class: "border list-unstyled text-decoration-none text-dark" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li><%= link_to current_user.email, edit_user_registration_path, class: "mx-5" %></li>
            <li><%= button_to 'Logout', destroy_user_session_path, class: "mx-5 text-danger", method: :delete %></li>
          </ul>
          <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>
  <% else %>
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <%# <a class="navbar-brand" href="#">Hobby Cubby</a> %>
        <%= link_to "Hobby Cubby", root_path, class: "border list-unstyled text-decoration-none text-dark" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li><%= link_to 'Sign In', new_user_session_path, class: "mx-5" %></li>
            <li><%= link_to 'Sign Up', new_user_registration_path, class: "mx-5" %></li>
          </ul>
        </div>
      </div>
    </nav>
  <% end %>
</ul>